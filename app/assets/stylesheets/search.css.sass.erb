#search-bar
  height: 55px
  border-bottom: 1px solid #ccc
  background-color: white
  background-color: #f1f1f1
  .aoq-wrapper
    display: inline-block
    position: relative
    left: -22px
  h1
    float: left
    color: #434343
    margin-left: 20px
    width: 200px
    margin-top: 4px
  .wrapper
    padding-top: 0
    .search
      input[type="text"]
        font-size: 16px
        color: #434343
        font-size: 14px
        margin-left: 55px
        border: 1px solid #aaa
        border-radius: 0
        padding: 5px
        padding-right: 20px
        width: 300px
        position: relative
        top: -8px
    .aoq
      background: url("//ssl.gstatic.com/ui/v1/disclosure/light-grey-disclosure-arrow-down.png") no-repeat scroll center center transparent
      height: 4px
      padding: 11px 5px
      width: 7px
      cursor: pointer
    button#submit.nodropdown
      margin-left: 3px
  form.new
    padding-top: 17px
    display: inline
    width: 150px
  form.search
    padding-top: 17px
    width: 725px
    display: inline
  #advanced
    width: 325px
    border: 1px solid #ccc
    position: absolute
    top: 41px
    left: 275px
    background-color: white
    z-index: 99999999999999
    display: none
    form
      margin: 20px
      input
        border: 1px solid #ccc
        width: 280px
        padding: 2px
      select
        width: 287px
    label
      margin-top: 5px
      display: block
      margin-bottom: 3px
    .close-button
      background-image: url("//ssl.gstatic.com/ui/v1/icons/common/x_8px.png")
      cursor: pointer
      height: 21px
      opacity: 0.4
      padding: 2px
      position: absolute
      right: 0
      top: 4px
      width: 21px

#pagination-wrapper
  font-size: 10px
  clear: both
  .paggination
    font-size: 10px
    font-weight: bold
    padding-bottom: 11px
    float: left
    display: inline
    margin-left: 5px
    a:hover
      color: #fff
      background: #ec8526
      border: 1px solid #d77011
    a, span.current, span.disabled
      border: 1px solid #ccc
      -webkit-border-radius: 3px
      -moz-border-radius: 3px
      border-radius: 3px
      padding: 3px 6px
      margin: 0 1px
    a.active, span.current
      background: none
      border: none
      color: #434343
  #pagination-counter
    display: inline-block
    padding-bottom: 11px
    margin-left: 5px
    float: left