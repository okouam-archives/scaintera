#footer
  padding: 10px 0 10px
  font-size: 10px
  color: white
  clear: both
  overflow: hidden
  a
    color: white
    font-weight: bold
    text-decoration: none
  a:hover
    color: #666
  .right
    float: right
    text-align: right

.block
  border: 1px solid #ccc
  background-color: white
  border-top: 0
  table.layout tr td, .block table.layout tr th
    border-bottom-width: 0
    line-height: normal
    padding: 10px
    text-align: left
    background-color: white !important

.portlet
  margin: 0 0 1em 0
  font-family: "Lucida Grande",Verdana,sans-serif
  font-size: 11px
  border: 1px solid #ccc
  color: #222222
  -moz-border-radius: 4px
  -webkit-border-radius: 4px
  margin-left: 30px
  margin-bottom: 40px
  margin-right: 30px
  .portlet-content
    padding: 0.8em
    color: #333
  .nopadding
    padding: 0

table
  width: 100%
  border-collapse: collapse
  margin-bottom: 15px
  td, th
    line-height: normal
    padding: 10px
    text-align: left
  td
    border-top: 1px solid #DDDDDD

#nav
  li
    margin-top: 5px
  a
    color: white
    font-size: 11px
    font-weight: bold