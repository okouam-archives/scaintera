#footer
  background: url(<%= asset_path "ft.gif" %>) 0 0 repeat-x
  padding: 10px 0 50px
  font-size: 10px
  color: #757575
  clear: both
  overflow: hidden
  a
    color: #757575
    text-decoration: none
  a:hover
    color: #666
    text-decoration: none
  .left
    float: left
  .right
    float: right
    text-align: right

.block
  border: 1px solid #ccc
  background-color: white
  border-top: 0
  table.layout tr td, .block table.layout tr th
    border-bottom-width: 0
    line-height: normal
    padding: 10px
    text-align: left
    background-color: white !important
  form
    li
      list-style-type: none
      margin-bottom: 10px
    label
      display: block
      margin-bottom: 2px

.portlet
  margin: 0 0 1em 0
  font-family: "Lucida Grande",Verdana,sans-serif
  font-size: 11px
  border: 1px solid #ccc
  color: #222222
  -moz-border-radius: 4px
  -webkit-border-radius: 4px
  .portlet-header
    cursor:auto
    border: 1px solid #aaaaaa
    color: #222222
    font-weight: bold
    -moz-border-radius-topleft: 4px
    -webkit-border-top-left-radius: 4px
    -moz-border-radius-topright: 4px
    -webkit-border-top-right-radius: 4px
    margin: 0
    padding: 4px 6px 5px
    font-size: 12px
    border: none !important
    color: #333 !important
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif
    cursor:move
    .ui-icon
      float: right
      cursor:pointer
    img
      float:left
      margin-right: 5px
    span
      float: right
      margin-right: 5px
      font-variant: small-caps
      a:hover
        color: white
  .portlet-content
    padding: 0.8em
    color: #333

table
  width: 100%
  border-collapse: collapse
  td, th
    border-bottom: 1px solid #DDDDDD
    line-height: normal
    padding: 10px
    text-align: left