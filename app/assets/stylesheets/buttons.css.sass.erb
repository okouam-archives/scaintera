.button, input[type="submit"]
  background: url(<%= asset_path "white-grad.png" %>) repeat-x scroll left top #F2F2F2
  -moz-box-sizing: content-box
  border-radius: 11px 11px 11px 11px
  border-style: solid
  border-width: 1px
  cursor: pointer
  font-size: 12px !important
  line-height: 13px
  padding: 3px 8px
  text-decoration: none
  font-family: Arial
  border-color: #BBBBBB
  color: #464646
  text-shadow: 0 1px 0 #FFFFFF

input.file
  font-family: Arial
  font-size: 12px !important
  padding: 3px
  border-style: solid

.button:hover
  border-color: #666666

.search-button
  position: relative
  top: -4px
  cursor: pointer
  padding: 0
  border: 0 none
  margin-left: -15px
  background-color: inherit
  div
    background-color: #4D90FE
    background-image: -moz-linear-gradient(center top , #4D90FE, #4787ED)
    width: 80px
    border: 1px solid #3079ED
    color: #FFFFFF
    border-radius: 2px 2px 2px 2px
    img
      margin-top: 3px
      padding: 0

.blue-button
  cursor: pointer
  padding: 0
  border: 0 none
  div
    background-color: #4D90FE
    background-image: -moz-linear-gradient(center top , #4D90FE, #4787ED)
    width: 80px
    border: 1px solid #3079ED
    padding: 4px
    color: #FFFFFF
    border-radius: 2px 2px 2px 2px

.red-button
  border: 0 none
  background-color: transparent
  position: relative
  top: -10px
  div
    background-color: #D14836
    background-image: -moz-linear-gradient(center top , #DD4B39, #D14836)
    border: 1px solid transparent
    color: #FFFFFF
    padding-right: 20px
    padding-left: 20px
    text-transform: uppercase
    line-height: 25px
    font-size: 11px
    font-weight: 700
    font-family: Arial
    border-radius: 2px 2px 2px 2px