  .block_content
    #portlets
      %span{style: "float: right; margin-right: 30px"}
        = image_tag "logo.png", style: "width: 50px"
      .clear
      .portlet
        .portlet-content.nopadding
          %table
            %thead
              %tr
                %th
                %th{style: "width: 440px"} Type de Couverture
                %th # Bénéficiares
                %th Frais d'activation
                %th Prélèvement
            %tfoot
              %tr
                %td
                %td
                %td
                  %b{style: "float: right"}
                    Total
                %td.joining_fee
